@import "../../templates/merchant-info/merchant-info.wxss";

/* common */
page {
  height: 100%;
}

.wrapper {
  width: 750rpx;
  height: 100%;
}

.container {
  width: 750rpx;
  height: 100%;
}

.border-bottom {
  border-bottom: solid 1rpx rgb(230,230,230);
}

.part-title {
  padding-bottom: 12rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 36rpx;
}

.padding-leftRight {
  padding: 0 40rpx;
}


/* intro */
.intro {
  border-bottom: solid 12rpx #F9F9F9;
}

.bannerPic {
  display: block; /* 为了消除inline-block后面的空格问题 */
  width: 750rpx;
  height: 530rpx;
}

.intro-title {
  position: relative;
}

.intro-title-text {
  margin-left: 165rpx;
  padding: 34rpx 0;
  line-height: 74rpx;
  font-weight: 500;
  font-size: 56rpx;
}

.intro-title-logo {
  position: absolute;
  left: 0;
  top: 4rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: solid 2rpx rgba(0,0,0,.06);
  background-color: #F1F1F1;
}

.intro-contact {
  position: relative;
  height: 120rpx;
  line-height: 120rpx;
}

.intro-contact-icon {
  position: absolute;
  left: 6rpx;
  font-size: 28rpx;
}

.intro-contact-text {
  position: absolute;
  left: 54rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 120rpx;
  line-height: 120rpx;
  font-size: 32rpx;
}

.intro-contact-more {
  position: absolute;
  right: 6rpx;
  color: #C5C5C5;
  font-size: 28rpx;
}

.intro-main {
  padding: 60rpx 0;
}

.intro-main-text {
  margin-top: 6rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  font-weight: 300;
  color: #464645;
  text-align: justify;
  /*letter-spacing: -0.22rpx;*/
}

.intro-announce {
  padding: 60rpx 0 42rpx 0;
}

.intro-announce-item {
  position: relative;
  width: 100%;
  height: 36rpx;
  margin: 18rpx 0;
  line-height: 36rpx;
}

.annouce-item-icon {
  position: absolute;
  left: 10rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 26rpx;
  border-radius: 4rpx;
}

.annouce-item-text {
  position: absolute;
  left: 66rpx;
  font-size: 28rpx;
  color: #464645;
}

.no-announcements{
  height: 144rpx;
  line-height: 144rpx;
  text-align: center;
  font-size: 28rpx;
  color: #A9AAA9;
}

  /* 最新动态的icon样式设置 */
.icon-promotion {
  background: #E75750;
}

.icon-announcement {
  background: #F5A623;
}


/* comments */
.comments {
  padding-top: 60rpx;
}

.comments-item {
  overflow: hidden;
  margin-top: 40rpx;
  padding-left: 40rpx;
}

.comments-image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.comments-item-content {
  float: right;
  width: 592rpx;
  padding-right: 40rpx;
}

.comments-item-info {
  padding-top: 16rpx;
  color: #999;
  font-size: 26rpx;
}

.comments-item-name {
  color: #777776;
}

.comments-item-time {
  position: absolute;
  right: 40rpx;
  font-size: 24rpx;
  text-align: right;
  color: #A9A9A9;
}

.comments-item-text {
  margin: 20rpx 0 30rpx 0;
  font-size: 28rpx;
  line-height: 32rpx;
  word-wrap: break-word;
  word-break: normal;
  text-align: justify;
}

.reply-text {
  font-size: 26rpx;
  color: black;
}

.no-comments {
  width: 750rpx;
  height: 208rpx;
  line-height: 208rpx;
  text-align: center;
  font-size: 28rpx;
  color: #A9AAA9;
  border-bottom: solid 20rpx #F9F9F9;
}

.comments-more {
  box-sizing: content-box;
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 24rpx;
  color: #A9AAA9;
  box-shadow: 0 -1rpx 0 rgb(230,230,230);
  border-bottom: solid 20rpx #F9F9F9;
}

.no-border {
  border-bottom: 0!important;
}


/* addComments */
.addComments {
  overflow: hidden;
  position: relative;
  width: 750rpx;
  height: 100rpx;
  box-shadow: 0 -1rpx 1rpx rgb(230,230,230);
}

.addComments-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}

.addComments-icon {
  position: absolute;
  top: 46%;
  left: 40rpx;
  transform: translateY(-50%);
  font-size: 38rpx;
  color: #C5C5C5;
}

.addComments-input {
  position: absolute;
  top: 50%;
  left: 110rpx;
  width: 600rpx;
  transform: translateY(-50%);
  line-height: 38rpx;
  font-size: 32rpx;
  color: #C5C5C5;
}

.add-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 320rpx;
  padding-top: 30rpx;
  background-color: white;
}

.add-place {
  width: 570rpx;
  height: 266rpx;
  font-size: 32rpx;
  color: #C5C5C5;
}

.add-placeholder {
  color: #C5C5C5;
}

.add-button {
  position: absolute;
  right: 20rpx;
  bottom: 24rpx;
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  color: #FFFFFF;
  background: #C6C6C6;
  border-radius: 8rpx;
}

.isActive {
  background-color: black;
}

